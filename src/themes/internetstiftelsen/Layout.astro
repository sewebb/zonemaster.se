---
import BaseLayout from './BaseLayout.astro';
import Skip from '../default/Skip.astro';
import Header from './Header.astro';
import Banner from '../default/Banner.astro';
import Content from '../default/Content.astro';
import Alerts from '@/lib/components/Alert/Alerts.svelte';
import Footer from './Footer.astro';
import SvFooter from './SvFooter.astro';

interface Props {
    title?: string;
}

const { title } = Astro.props;
const { lang } = Astro.params;
---

<BaseLayout title={title}>
    <Skip />
    <Header />
    <Banner />
    <Content>
        <slot />
    </Content>
    {lang === 'sv' ? <SvFooter /> : <Footer />}
    <Alerts client:idle />

    <script src="../default/scripts/tab-highlighting.js" />
    <script src="../default/scripts/a11y-toggle.js" />
    <script src="../default/scripts/icon-toggle.js" />
    <script src="../default/scripts/text-toggle.js" />
</BaseLayout>
